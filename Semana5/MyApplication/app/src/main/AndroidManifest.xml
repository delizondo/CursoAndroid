<?xml version="1.0" encoding="utf-8"?>
<manifest package="example.myapplication"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="example.myapplication.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="example.myapplication.ui.ListViewActivity"/>
        <activity android:name="example.myapplication.ui.RecyclerActivity"/>
        <activity android:name="example.myapplication.ui.PagerActivity"/>
        <activity android:name="example.myapplication.ui.DrawerActivity"/>
        <activity android:name="example.myapplication.ui.AnimationsActivity"/>
    </application>

</manifest>